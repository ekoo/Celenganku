<resources>
    <!-- Base application theme. -->
    <style name="Theme.Celenganku" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_grey_300</item>
        <item name="colorPrimaryVariant">@color/blue_grey_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brown_300</item>
        <item name="colorSecondaryVariant">@color/brown_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
    </style>

    <style name="SplashTheme" parent="Theme.Celenganku">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
</resources>