<resources>
    <!-- Base application theme. -->
    <style name="Theme.Celenganku" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_grey_300</item>
        <item name="colorPrimaryVariant">@color/blue_grey_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brown_300</item>
        <item name="colorSecondaryVariant">@color/brown_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Theme.Celenganku">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
</resources>